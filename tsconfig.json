{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@root/*": ["*"],
      "@modules/*": ["modules/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  }
}